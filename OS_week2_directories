# abs path shows  the main path where the file is located
# relative path shows the path relative to the current working directory

# this code can be written in code editor or directly in cmd prompt

#reading files
file = open("filename.txt") #opens the file in same working directory
#file descriptor : a token generated by the OS that allows program sto do more operations with the file
# stored as attribute of file object

print(file.readline()) # reads only one line
print(file.read()) # reads from where we are till end of file
file.close()

with open("filename.txt") as file: #default in read only mode
    print(file.readline())
    #any operations u need to perform
#with automaically closes the file opened

#iterating through the files

with open("filename.txt") as file:
    for line in file:
        print(line.strip().upper())
        #strip to remove extra newline char

file = open("filename.txt")
lines = file.readlines()
file.close()
lines.sort()
print(lines)

# r : read default
# w : write returns no of char written
# a : append
# r+ : read-write
#writing files
with open("filename.txt","w") as file: #w: write only mode, creates new file if it doesn't exist or rewrites its content 
    file.write("some statments")


#managing files & directories

import os 
os.remove("file.txt") #deletes the file
os.rename("old_name.txt","new_name.txt")
os.path.exists("file.txt") #true if file exists or else false

os.path.getsize("file.txt") #size of file
os.path.getmtime("file.txt") #returns timestamp of the creation/accesed but from the start of unix system

import datetime
timestamp = os.path.getmtime("file.txt")
datetime.datetime.fromtimestamp(timestamp) # makes easier to undrstand the time & date

os.path.abspath("file.txt") # gives abs path of file

#Directories
os.getcwd() # current directory
os.mkdir("new_dir") # creates new directory
os.chdir("new_dir") #changes current directory
os.rmdir("new_dir") # removes the directory only if it is empty
os.listdir("new") #gives list of content in the directory


dir = "website" #example directory
for name in os.listdir(dir):
    fullname = os.path.join(dir, name) #separates the file from the directory (\ in mac & linux , / in windows)
    if os.path.isdir(fullname):
        print("{} is a directory".format(fullname))
    else:
        print("{} is a file".format(fullname))

# website/img is a directory
# website/pic is a file
